{
  "buildCommand": "cd ../.. && pnpm --filter @vocalytics/web build && mkdir -p public && cp -r packages/web/dist/* public/",
  "installCommand": "pnpm install",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/[...path]" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
