{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "rm -rf node_modules/.cache && pnpm install && pnpm --filter server build && pnpm --filter web build",
  "outputDirectory": "packages/web/dist",
  "installCommand": "pnpm install",
  "framework": null,
  "functions": {
    "api/cron/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/queue-worker",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/reset-counters",
      "schedule": "10 8 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/:path((?!api).*)*",
      "destination": "/index.html"
    }
  ]
}
