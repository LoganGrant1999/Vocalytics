{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm install && pnpm --filter server build && pnpm --filter web build",
  "outputDirectory": "packages/web/dist",
  "installCommand": "pnpm install",
  "framework": null,
  "crons": [
    {
      "path": "/cron/queue-worker",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/cron/reset-counters",
      "schedule": "10 8 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/fastify"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
