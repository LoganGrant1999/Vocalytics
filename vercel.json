{
  "buildCommand": "cd ../.. && pnpm --filter @vocalytics/web build && mkdir -p public && cp -r packages/web/dist/* public/",
  "outputDirectory": "public",
  "installCommand": "pnpm install",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
