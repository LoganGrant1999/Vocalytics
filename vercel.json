{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "outputDirectory": "packages/web/dist",
  "functions": {
    "api/cron/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/queue-worker",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/reset-counters",
      "schedule": "10 8 * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
