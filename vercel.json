{
  "buildCommand": "pnpm --filter @vocalytics/web build",
  "outputDirectory": "dist",
  "installCommand": "pnpm install",
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
