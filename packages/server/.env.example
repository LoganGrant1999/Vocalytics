# YouTube OAuth (create credentials in Google Cloud Console)
# Use "Web application" type (NOT "Desktop") to get refresh tokens
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI_LOCAL=http://localhost:3000/api/youtube/callback
GOOGLE_REDIRECT_URI_PROD=https://your-app.vercel.app/api/youtube/callback
APP_ENV=local  # or "production"

# OpenAI API
OPENAI_API_KEY=
REPLIES_MODEL=gpt-4o-mini
MODERATION_MODEL=omni-moderation-latest

# Supabase
SUPABASE_URL=https://<project>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...
STRIPE_CHECKOUT_SUCCESS_URL=https://yourapp.com/success?session_id={CHECKOUT_SESSION_ID}
STRIPE_CHECKOUT_CANCEL_URL=https://yourapp.com/pricing
STRIPE_PORTAL_RETURN_URL=https://yourapp.com/account

# Public links shown in paywall
PUBLIC_PRICING_URL=https://yourapp.com/pricing
PUBLIC_BILLING_URL=https://yourapp.com/billing

# Free limits aligned with cron resets
FREE_LIMIT_ANALYZE_WEEKLY=100
FREE_LIMIT_REPLY_DAILY=50

# HTTP Server
PORT=3000
