{
  "name": "vocalytics",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:prod": "cross-env NODE_ENV=test vitest run --reporter=verbose",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "pnpm -r typecheck",
    "gen:api": "openapi-typescript openapi.yaml -o packages/web/src/types/api.d.ts",
    "dev:server": "pnpm --filter server dev:http",
    "dev:web": "pnpm --filter web dev",
    "dev:both": "concurrently -k -n server,web -c green,cyan \"pnpm dev:server\" \"pnpm dev:web\""
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "openapi-fetch": "^0.14.1",
    "openapi-typescript": "^7.9.1",
    "prettier": "^3.2.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^1.2.1",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "dependencies": {
    "@fastify/cookie": "^9.4.0",
    "@supabase/supabase-js": "^2.75.0",
    "@types/jsonwebtoken": "^9.0.10",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "stripe": "^19.1.0"
  }
}
