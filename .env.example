# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_ANON=your_anon_key

# Test User Credentials (for prod_verify.sh)
TEST_EMAIL=test@example.com
TEST_PASS=your_test_password

# YouTube API
GOOGLE_ACCESS_TOKEN=

# OpenAI API (optional - enables real moderation + GPT-4 replies)
OPENAI_API_KEY=
REPLIES_MODEL=gpt-4o-mini
MODERATION_MODEL=omni-moderation-latest

# Stripe (TEST)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_PRICE_ID=price_...

# Leave unset in local dev to skip signature verification
# STRIPE_WEBHOOK_SECRET=

# Use test portal configuration id
STRIPE_PORTAL_CONFIGURATION_ID=bpc_...

# Stripe Checkout/Portal URLs
# For local dev (used by tests):
STRIPE_CHECKOUT_SUCCESS_URL=http://localhost:3000/success.html?session_id={CHECKOUT_SESSION_ID}
STRIPE_CHECKOUT_CANCEL_URL=http://localhost:3000/cancel.html
STRIPE_PORTAL_RETURN_URL=http://localhost:3000/account.html

# For production, replace with your deployed URL:
# STRIPE_CHECKOUT_SUCCESS_URL=https://your-domain.com/success.html?session_id={CHECKOUT_SESSION_ID}
# STRIPE_CHECKOUT_CANCEL_URL=https://your-domain.com/cancel.html
# STRIPE_PORTAL_RETURN_URL=https://your-domain.com/account.html

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Free tier limits for testing
FREE_LIMIT_ANALYZE_WEEKLY=2
FREE_LIMIT_REPLY_DAILY=1

# Debug / tuning (optional)
LOG_LLM=
OPENAI_MAX_PARALLEL=4
